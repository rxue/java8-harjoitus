		  <scope>test</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.junit.platform</groupId>
		  <artifactId>junit-platform-commons</artifactId>
		  <version>1.7.1</version>
		  <scope>test</scope>
	  </dependency>
	  <dependency>
		  <groupId>org.junit.jupiter</groupId>
		  <artifactId>junit-jupiter-api</artifactId>
	  </dependency>
	  <dependency>
